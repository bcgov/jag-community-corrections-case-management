{
  "display": "form",
  "components": [
    {
      "label": "HTML",
      "content": "${label_editgrid}",
      "className": "${className_label}",
      "refreshOnChange": false,
      "key": "html",
      "type": "htmlelement",
      "input": false,
      "tableView": false
    },
    {
      "type": "editgrid",
      "key": "${key_editgrid}",
      "label": "",
      "input": true,
      "hideLabel": false,
      "templates": {
        "header": "\n<div class=\"row\"> \n  {% util.eachComponent(components, function(component) { %}  \n    <div class=\"col-sm-3\">\n      <strong>{{ component.label }}</strong> \n    </div> \n  {% }) %} \n \n <div class=\"col-sm-3\">\n <strong>Actions</strong>\n</div> </div> ",
        "row": "\n<div class=\"row justify-content-between\"> \n  {%util.eachComponent(components, function(component) { %} \n    <div class=\"col-sm-3\">\n      {{ row[component.key] }}\n    </div> \n  {% }) %} \n  <div class=\"col-sm-3 text-center\"> \n    <div class=\"btn-group\"> \n      <div class=\"btn btn-default btn-sm editRow\"><i class=\"fa fa-edit\"></i></div> \n       \n    </div>  \n  </div> \n</div>",
        "footer": ""
      },
      "disableAddingRemovingRows": true,
      "components": [
        {
          "label": "Columns",
          "columns": [
              {
                "components": [
                  {
                    "type": "textfield",
                    "label": "${label_questionLabel}",
                    "tableView": true,
                    "key": "${key_questionLabel}",
                    "input": true,
                    "disabled": true,
                    "defaultValue": ""
                  }
                ],
                "width": 4,
                "offset": 0,
                "push": 0,
                "pull": 0,
                "size": "md",
                "currentWidth": 4
              },
              {
                "components": [
                    {
                      "type": "textarea",
                      "label": "${label_textarea}",
                      "tableView": true,
                      "key": "${key_comments}",
                      "input": true
                    }
                  ],
                  "width": 4,
                  "offset": 0,
                  "push": 0,
                  "pull": 0,
                  "size": "md",
                  "currentWidth": 4
              }
          ],
          "key": "columns",
          "type": "columns",
          "input": false,
          "tableView": false
        }
      ]
    }
  ]
}