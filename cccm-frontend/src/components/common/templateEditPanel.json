{
  "display": "form",
  "components": [
    {
        "title": "${panelTitle}",
        "customClass": "bg-blue",
        "collapsible": false,
        "key": "${panelKey}",
        "type": "panel",
        "label": "Panel",
        "input": false,
        "tableView": false,
        "components": [
          {
            "label": "HTML",
            "tag": "div",
            "attrs": [
                {
                    "attr": "",
                    "value": ""
                }
            ],
            "content": "{{data.${contentInputKey}}}",
            "refreshOnChange": true,
            "key": "${contentKey}",
            "type": "htmlelement",
            "input": true,
            "tableView": false,
            "customConditional": "show = form.components[0].components[2].label === \"Add Source\";"
          },
          {
            "label": "",
            "tableView": true,
            "clearOnHide": false,
            "customConditional": "show = form.components[0].components[2].label == \"Add Source\";",
            "key": "${contentInputKey}",
            "type": "textfield",
            "input": true,
            "defaultValue": "${content}"
          },
          {
            "label": "${label_btn_add_source}",
            "action": "${action_btn_add_source}",
            "showValidations": false,
            "disableOnInvalid": true,
            "tableView": true,
            "key": "${key_btn_add_source}",
            "type": "button",
            "input": true,
            "event": "${evt_btn_add_source}"
          }
        ]
      }   
  ]
}